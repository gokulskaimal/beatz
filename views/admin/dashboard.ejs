<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Beatz</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        orange: {
                            500: '#f97316',
                            600: '#ea580c',
                        },
                    },
                },
            },
        }
    </script>
    <style type="text/tailwindcss">
        @layer utilities {
            .bg-darker { background-color: #0a0a0a; }
        }
    </style>
</head>
<body  class="min-h-screen bg-black text-white">
  <!-- Sidebar and Header -->
  <div class="flex  h-screen">
    <!-- Sidebar -->
    <div class="w-64 bg-[#111] p-4">
      <%- include('../partials/adminHeader') %>
    </div>

    <!-- Main Content -->
    <main class="flex-1 p-8 bg-darker overflow-y-auto">
      <!-- Header -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-xl font-bold text-yellow-500">Sales Summary</h1>
        <button class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-400">Download</button>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-4 gap-4 mb-6">
        <div class="p-4 bg-gray-700 rounded-lg text-center">
          <h2 class="text-white font-bold">40,689</h2>
          <p class="text-gray-400 text-sm">Total Users</p>
          <p class="text-green-500 text-xs">+8.5% Up from yesterday</p>
        </div>
        <div class="p-4 bg-gray-700 rounded-lg text-center">
          <h2 class="text-white font-bold">10,293</h2>
          <p class="text-gray-400 text-sm">Total Orders</p>
          <p class="text-green-500 text-xs">+1.3% Up from past week</p>
        </div>
        <div class="p-4 bg-gray-700 rounded-lg text-center">
          <h2 class="text-white font-bold">â‚¹99,000</h2>
          <p class="text-gray-400 text-sm">Total Sales</p>
          <p class="text-red-500 text-xs">-4.3% Down from yesterday</p>
        </div>
        <div class="p-4 bg-gray-700 rounded-lg text-center">
          <h2 class="text-white font-bold">2,040</h2>
          <p class="text-gray-400 text-sm">Total Customers</p>
          <p class="text-green-500 text-xs">+1.6% Up from yesterday</p>
        </div>
      </div>

      <!-- Chart Section -->
      <!-- <div class="bg-gray-700 rounded-lg p-4">
        <h3 class="text-yellow-500 text-lg font-bold mb-4">Orders Update</h3>
        <canvas id="orderChart" class="w-full h-64"></canvas>
      </div>
    </main>
  </div> -->

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document.getElementById('orderChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
        datasets: [{
          label: 'Orders',
          data: [500, 700, 1000, 800, 1200, 1500, 1700, 2000, 2200, 1800, 1900, 2300],
          borderColor: '#F59E0B',
          borderWidth: 2,
          fill: false
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>
</body>
</html>
