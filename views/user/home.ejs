<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beatz Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        orange: {
                            500: "#f97316",
                            600: "#ea580c",
                        },
                    },
                },
            },
        };
    </script>
    <style type="text/tailwindcss">
        @layer utilities {
            .bg-darker {
                background-color: #0a0a0a;
            }
        }
    </style>
</head>

<body class="min-h-screen bg-black text-white">
    <!-- Include Header -->
    <%- include('../partials/header',{ user}) %>

    <main>
        <!-- Hero Section -->
        <section class="relative h-[500px] overflow-hidden">
            <img src="/images/hphero-kimkpill.jpg.large.2x.jpg" alt="Beats x Kim"
                class="object-cover w-full h-full">
            <div class="absolute inset-0 bg-gradient-to-r from-black/80 to-transparent">
                <div class="container mx-auto px-4 h-full flex items-center">
                    <div class="max-w-lg">
                        <h1 class="text-5xl font-bold mb-4">
                            beats <span class="text-orange-500">x</span> kim
                        </h1>
                        <p class="text-gray-300 mb-6">Special Edition Beats Pro</p>
                        <button class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded">
                            Shop Now
                        </button>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- New Products Section -->
        <section class="py-12 bg-darker">
            <div class="container mx-auto px-4">
                <h2 class="text-2xl font-bold text-orange-500 mb-8">New Arrivals</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    <% products.forEach((product, index) => { %>
                        <div class="bg-gray-900 border border-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 relative">
                            <a href="/user/product/<%= product._id %>">
                                <div class="relative group">
                                    <img src="<%= product.image[0] %>" alt="<%= product.product_name %>"
                                        class="w-full h-60 object-cover group-hover:scale-105 transition-transform duration-300">
                                    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                    </div>
                                </div>
                                <div class="p-4">
                                    <h3 class="font-semibold text-lg text-white mb-1">
                                        <%= product.product_name %>
                                    </h3>
                                    <div class="flex items-center gap-1 mb-2">
                                        <span class="text-yellow-400">
                                            &#9733;&#9733;&#9733;&#9733;&#9734;
                                        </span>
                                        <span class="text-gray-400 text-sm">(120 Reviews)</span>
                                    </div>
                                    <p class="text-white-500 font-bold text-xl mb-4"><span class="text-red-500 font-bold">â‚¹</span><%= product.price %>
                                    </p>
                                    <button class="w-full bg-yellow-500 hover:bg-yellow-800 text-black font-bold px-4 py-2 rounded-lg font-medium transition duration-300">
                                        View Details
                                    </button>
                                </div>
                            </a>
                            <button onclick="toggleWishlist('<%= product._id %>')" class="wishlist-btn absolute top-2 right-2 bg-gray-800 bg-opacity-50 p-2 rounded-full hover:bg-gray-700 transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 <%= product.isInWishlist ? 'text-red-500 fill-current' : 'text-white' %>" fill="<%= product.isInWishlist ? 'currentColor' : 'none' %>" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                            </button>
                        </div>
                    <% }) %>
                </div>
                <div class="mt-8 text-center">
                    <a href="/user/allProducts" class="inline-block bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg text-lg font-bold">
                        View All
                    </a>
                </div>
            </div>
        </section>

        <section class="relative h-[500px] overflow-hidden">
            <img src="/images/hphero-arge.2x.jpg" alt="Beats Solo 4" alt="Beats x Kim"
                class="object-cover w-full h-full">
            <div class="absolute inset-0 bg-gradient-to-r from-black/80 to-transparent">
                <div class="container mx-auto px-4 h-full flex items-center">
                    <div class="max-w-lg">
                        <h1 class="text-5xl font-bold mb-4">
                            Beats <span class="text-orange-500">x</span>Solo 4
                        </h1>
                        <p class="text-gray-300 mb-6">Stands out. Stays on.</p>
                        <button class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded">
                            Shop Now
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Registration -->
        <section class="py-12 bg-black">
            <div class="container mx-auto px-4">
                <div class="max-w-md mx-auto text-center">
                    <h2 class="text-2xl font-bold mb-4">Register your Beats</h2>
                    <p class="text-gray-400 mb-6">
                        Register your Beats product for warranty and updates
                    </p>
                    <div class="flex gap-2">
                        <input type="text" placeholder="Enter serial number"
                            class="flex-1 bg-gray-900 border-gray-800 text-white px-3 py-2 rounded">
                        <button class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded">
                            Register
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script>
        function toggleWishlist(productId) {
            fetch('/user/wishlist/toggle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ productId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: data.message,
                        showConfirmButton: false,
                        timer: 1500
                    });
                    // Update the wishlist icon
                    const wishlistBtn = document.querySelector(`button[onclick="toggleWishlist('${productId}')"]`);
                    if (wishlistBtn) {
                        const svg = wishlistBtn.querySelector('svg');
                        svg.classList.toggle('text-red-500');
                        svg.classList.toggle('fill-current');
                        if (svg.getAttribute('fill') === 'none') {
                            svg.setAttribute('fill', 'currentColor');
                        } else {
                            svg.setAttribute('fill', 'none');
                        }
                    }
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message,
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                });
            });
        }
    
        document.addEventListener('DOMContentLoaded', () => {
            const userIcon = document.getElementById('user-icon');
            const userDropdown = document.getElementById('user-dropdown');
    
            userIcon.addEventListener('click', () => {
                userDropdown.classList.toggle('hidden');
            });
    
            document.addEventListener('click', (e) => {
                if (!userIcon.contains(e.target) && !userDropdown.contains(e.target)) {
                    userDropdown.classList.add('hidden');
                }
            });
        });
    </script>
</body>

</html>

